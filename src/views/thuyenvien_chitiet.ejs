                        <!-- Language Certificates Tab -->
                        <div class="tab-pane fade" id="language-certificates" role="tabpanel" aria-labelledby="language-tab">
                            <div class="card shadow mb-4">
                                <div class="card-body">
                                    <h5 class="text-primary">Chứng chỉ ngoại ngữ</h5>
                                    <p class="text-muted">Nội dung chứng chỉ ngoại ngữ sẽ được hiển thị ở đây.</p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Crew Certificates Tab -->
                        <div class="tab-pane fade" id="crew-certificates" role="tabpanel" aria-labelledby="certificates-tab">
                            <div class="card shadow mb-4">
                                <div class="card-body">
                                    <h5 class="text-primary">Chứng chỉ thuyền viên</h5>
                                    <p class="text-muted">Nội dung chứng chỉ thuyền viên sẽ được hiển thị ở đây.</p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Sailing History Tab -->
                        <div class="tab-pane fade" id="sailing-history" role="tabpanel" aria-labelledby="history-tab">
                            <div class="card shadow mb-4">
                                <div class="card-body">
                                    <h5 class="text-primary">Lịch sử đi tàu</h5>
                                    <p class="text-muted">Nội dung lịch sử đi tàu sẽ được hiển thị ở đây.</p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Attachments Tab -->
                        <div class="tab-pane fade" id="crew-attachments" role="tabpanel" aria-labelledby="attachments-tab">
                            <div class="card shadow mb-4">
                                <div class="card-body">
                                    <h5 class="text-primary">Tài liệu đính kèm</h5>
                                    <p class="text-muted">Nội dung tài liệu đính kèm sẽ được hiển thị ở đây.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- MODAL POPUP CẬP NHẬT THÔNG TIN -->
                    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="editModalLabel">Cập nhật thông tin cá nhân</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form id="updateForm" action="/cap-nhat-thuyen-vien/<%= thuyenvieninfo.id_thuyenvien %>" method="POST">
                                        <div class="form-group text-center">
                                            <label>Ảnh đại diện:</label>
                                            <br>
                                            <img id="previewImage" src="/img/crew_test1.jpg" class="img-thumbnail mb-2"
                                                width="150">
                                            <input type="file" class="form-control-file" id="inputPhoto"
                                                accept="image/*">
                                        </div>

                                        <div class="form-group">
                                            <label>Họ và tên:</label>
                                            <input type="text" class="form-control" id="inputFullName" name="hoten" value="<%= thuyenvieninfo.hoten %>">
                                        </div>
                                        <div class="form-group">
                                            <label>Ngày sinh:</label>
                                            <input type="date" class="form-control" id="inputDob" name="ngaysinh" value="<%= thuyenvieninfo.ngaysinh %>">
                                        </div>
                                        <div class="form-group">
                                            <label>CCCD:</label>
                                            <input type="text" class="form-control" id="inputIdNumber" name="cccd" value="<%= thuyenvieninfo.cccd %>">
                                        </div>
                                        <div class="form-group">
                                            <label>Chiều cao:</label>
                                            <input type="text" class="form-control" id="inputHeight" name="chieucao" value="<%= thuyenvieninfo.chieucao %>">
                                        </div>
                                        <div class="form-group">
                                            <label>Cân nặng:</label>
                                            <input type="text" class="form-control" id="inputWeight" name="cannang" value="<%= thuyenvieninfo.cannang %>">
                                        </div>
                                        <div class="form-group">
                                            <label>Nhóm máu:</label>
                                            <select class="form-control" id="inputBloodType" name="nhommau" value="<%= thuyenvieninfo.nhommau %>">
                                                <option value="A">A</option>
                                                <option value="B">B</option>
                                                <option value="AB">AB</option>
                                                <option value="O">O</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Size giày:</label>
                                            <input type="text" class="form-control" id="inputShoeSize" name="sizegiay" value="<%= thuyenvieninfo.sizegiay %>">
                                        </div>
                                        <div class="form-group">
                                            <label>Size giày bảo hộ:</label>
                                            <input type="text" class="form-control" id="inputSafetyShoeSize" name="sizegiaybaoho" value="<%= thuyenvieninfo.sizegiaybaoho %>">
                                        </div>
                                        <div class="form-group">
                                            <label>Email:</label>
                                            <input type="email" class="form-control" id="inputEmail" name="email" value="<%= thuyenvieninfo.email %>">
                                        </div>
                                        <div class="form-group">
                                            <label>Số điện thoại:</label>
                                            <input type="text" class="form-control" id="inputPhone" name="sodienthoai" value="<%= thuyenvieninfo.sodienthoai %>">
                                        </div>
                                        <div class="form-group">
                                            <label>Tình trạng hôn nhân:</label>
                                            <select class="form-control" id="inputMaritalStatus" name="tinhtranghonnhan" value="<%= thuyenvieninfo.tinhtranghonnhan %>">
                                                <option value="Độc thân">Độc thân</option>
                                                <option value="Đã kết hôn">Đã kết hôn</option>
                                            </select>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                                    <button type="submit" class="btn btn-primary" id="saveChanges" form="updateForm">Lưu thay đổi</button>
                                </div>
                            </div>
                        </div>
